%h1= @article.title
%p= @article.content

.btn-group
  = link_to 'Back', root_path, class: "btn btn-default"
  - if_user_signed_in?
    = link_to 'Edit', edit_article_path, class: "btn btn-default"
    = link_to 'Delete',articles_path(@article), method: :delete, data: {comfirm: 'Are you sure?'}, class: "btn btn-default"
